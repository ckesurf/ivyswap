<div class= product-form-div product-form-closed>
    <%= form_for(@product) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :price %>
      <%= f.text_field :price %>

      <%= f.label :image_url, "Temp Paste image_url" %>
      <%= f.text_field :image_url %>

      <%= f.submit "Post to listings", class: "btn btn-large btn-primary" %>
    <% end %>
</div>
