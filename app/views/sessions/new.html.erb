<div class="hero-unit span7 center-box">
    <% provide(:title, "Sign in") %>
    <h1>Sign in</h1>

    <div class="row">
      <div class="span3">
        <%= form_for(:session, url: sessions_path) do |f| %>

          <%= f.label :email %>
          <%= f.text_field :email %>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.submit "Sign in", class: "btn btn-large signin-btn" %>
        <% end %>


      </div>
      <div class="span3 no-account">
        <div class="">
          <p> Don't have an account? <%= link_to "Columbia Students, sign up now!", signup_path %></p>

        </div>

      </div>
    </div>
</div>